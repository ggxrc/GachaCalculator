<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiente_main"
    tools:context=".AscensaoActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/determination"
        android:gravity="center"
        android:shadowColor="@color/white"
        android:shadowRadius="25"
        android:text="~ Serviço de Ascensão ~"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ScrollView para comportar todo o conteúdo -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/continuar_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitulo">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <!-- 1. Dropdown de Personagem -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_menu_personagem"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:hint="Escolha o personagem"
                app:errorEnabled="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <AutoCompleteTextView
                    android:id="@+id/actvPersonagem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/determination"
                    android:inputType="text"

                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 2. Nível Atual de Ascensão -->
            <TextView
                android:id="@+id/tvLabelNivelAtual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/determination"
                android:shadowColor="@color/white"
                android:shadowRadius="25"
                android:text="Nível atual:"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_menu_personagem" />

            <Spinner
                android:id="@+id/spinnerNivelAtual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:entries="@array/niveis_ascensao"
                android:fontFamily="@font/determination"
                app:layout_constraintBottom_toBottomOf="@+id/tvLabelNivelAtual"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvLabelNivelAtual"
                app:layout_constraintTop_toTopOf="@+id/tvLabelNivelAtual" />

            <!-- 3. Nível Desejado de Ascensão -->
            <TextView
                android:id="@+id/tvLabelNivelDesejado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/determination"
                android:shadowColor="@color/white"
                android:shadowRadius="25"
                android:text="Nível desejado:"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinnerNivelAtual" />

            <Spinner
                android:id="@+id/spinnerNivelDesejado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:entries="@array/niveis_ascensao"
                android:fontFamily="@font/determination"
                app:layout_constraintBottom_toBottomOf="@+id/tvLabelNivelDesejado"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvLabelNivelDesejado"
                app:layout_constraintTop_toTopOf="@+id/tvLabelNivelDesejado" />

            <!-- Divisor -->
            <View
                android:id="@+id/divider1"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:background="#40000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinnerNivelDesejado" />

            <!-- 4. Seção de Itens Coletados -->
            <TextView
                android:id="@+id/tvTituloItens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/determination"
                android:shadowColor="@color/white"
                android:shadowRadius="25"
                android:text="Itens já coletados:"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider1" />

            <!-- Item de Drop - Cinza -->
            <TextView
                android:id="@+id/tvDropCinza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/determination"
                android:shadowColor="@color/white"
                android:shadowRadius="15"
                android:text="Drop cinza:"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTituloItens" />

            <EditText
                android:id="@+id/etDropCinza"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/determination"
                android:hint="0"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvDropCinza"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvDropCinza"
                app:layout_constraintTop_toTopOf="@+id/tvDropCinza" />

            <!-- Item de Drop - Verde -->
            <TextView
                android:id="@+id/tvDropVerde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/determination"
                android:shadowColor="@color/white"
                android:shadowRadius="15"
                android:text="Drop verde:"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etDropCinza" />

            <EditText
                android:id="@+id/etDropVerde"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/determination"
                android:hint="0"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvDropVerde"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvDropVerde"
                app:layout_constraintTop_toTopOf="@+id/tvDropVerde" />

            <!-- Item de Drop - Raro (Azul) -->
            <TextView
                android:id="@+id/tvDropRaro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/determination"
                android:shadowColor="@color/white"
                android:shadowRadius="15"
                android:text="Drop raro:"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etDropVerde" />

            <EditText
                android:id="@+id/etDropRaro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/determination"
                android:hint="0"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvDropRaro"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvDropRaro"
                app:layout_constraintTop_toTopOf="@+id/tvDropRaro" />

            <!-- Item de Boss -->
            <TextView
                android:id="@+id/tvBoss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/determination"
                android:shadowColor="@color/white"
                android:shadowRadius="15"
                android:text="Item de boss:"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etDropRaro" />

            <EditText
                android:id="@+id/etBoss"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/determination"
                android:hint="0"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvBoss"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvBoss"
                app:layout_constraintTop_toTopOf="@+id/tvBoss" />

            <!-- Pedras Elementais - Azul -->
            <TextView
                android:id="@+id/tvPedraAzul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/determination"
                android:shadowColor="@color/white"
                android:shadowRadius="15"
                android:text="Pedra azul:"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etBoss" />

            <EditText
                android:id="@+id/etPedraAzul"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/determination"
                android:hint="0"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvPedraAzul"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvPedraAzul"
                app:layout_constraintTop_toTopOf="@+id/tvPedraAzul" />

            <!-- Pedras Elementais - Roxa -->
            <TextView
                android:id="@+id/tvPedraRoxa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/determination"
                android:shadowColor="@color/white"
                android:shadowRadius="15"
                android:text="Pedra roxa:"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etPedraAzul" />

            <EditText
                android:id="@+id/etPedraRoxa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/determination"
                android:hint="0"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvPedraRoxa"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvPedraRoxa"
                app:layout_constraintTop_toTopOf="@+id/tvPedraRoxa" />

            <!-- Pedras Elementais - Dourada -->
            <TextView
                android:id="@+id/tvPedraDourada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/determination"
                android:shadowColor="@color/white"
                android:shadowRadius="15"
                android:text="Pedra dourada:"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etPedraRoxa" />

            <EditText
                android:id="@+id/etPedraDourada"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/determination"
                android:hint="0"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvPedraDourada"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvPedraDourada"
                app:layout_constraintTop_toTopOf="@+id/tvPedraDourada" />

            <!-- Item de Coleta -->
            <TextView
                android:id="@+id/tvColeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/determination"
                android:shadowColor="@color/white"
                android:shadowRadius="15"
                android:text="Item de coleta:"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etPedraDourada" />

            <EditText
                android:id="@+id/etColeta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/determination"
                android:hint="0"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvColeta"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvColeta"
                app:layout_constraintTop_toTopOf="@+id/tvColeta" />

            <!-- Informação de desconto máximo -->
            <TextView
                android:id="@+id/tvInfoDesconto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/determination"
                android:shadowColor="@color/white"
                android:shadowRadius="15"
                android:text="Desconto máximo por itens coletados: 30%"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etColeta" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Resultado Final -->
    <Button
        android:id="@+id/continuar_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="#80FFFFFF"
        android:fontFamily="@font/determination"
        android:gravity="center"
        android:padding="16dp"
        android:shadowColor="@color/white"
        android:shadowRadius="25"
        android:text="Escolha um personagem..."
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Rodapé -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="*Em fases de testes. Criado por Raí Weslley"
        android:textColor="#797979"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>